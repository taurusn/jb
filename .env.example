# Database Configuration
# Prisma uses POSTGRES_PRISMA_URL (Vercel-compatible naming)
# Toggle between local and Supabase by commenting/uncommenting the URLs you want to use

# LOCAL DATABASE (for development)
POSTGRES_PRISMA_URL="postgresql://username:password@localhost:5432/job_platform?schema=public"
POSTGRES_URL_NON_POOLING="postgresql://username:password@localhost:5432/job_platform?schema=public"

# SUPABASE DATABASE (for testing deployment before production)
# POSTGRES_PRISMA_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"
# POSTGRES_URL_NON_POOLING="postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Legacy DATABASE_URL (kept for backwards compatibility with some scripts)
DATABASE_URL="postgresql://username:password@localhost:5432/job_platform?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Next Auth
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# File Upload - Supabase Storage (Recommended)
# Get these from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# File Upload - Cloudinary (Optional alternative)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Upload Settings
MAX_FILE_SIZE=5242880
# 5MB in bytes for documents
MAX_VIDEO_SIZE=104857600
# 100MB in bytes for videos (supports ~2 minute videos)
UPLOAD_DIR="public/uploads"
